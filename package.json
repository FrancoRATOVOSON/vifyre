{
  "name": "vifyre",
  "version": "0.1.0",
  "description": "Vite standing between React and Fastify to offer a very fast and great SSR tool.",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon server/index.ts",
    "prebuild": "rm -rf dist",
    "build:client": "vite build",
    "build:server": "vite build --ssr entry.server.tsx --outDir ../dist/server",
    "build:app": "node ./scripts/build.js",
    "build": "npm run build:client && npm run build:server && npm run build:app",
    "start": "node --env-file=.env dist/index.js",
    "lint": "eslint . --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FrancoRATOVOSON/vifyre.git"
  },
  "keywords": [
    "React",
    "Fastify",
    "Vite"
  ],
  "author": {
    "name": "Franco RATOVOSON",
    "email": "jean.franco.ratovoson@gmail.com",
    "url": "https://rjfranco.me"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/FrancoRATOVOSON/vifyre/issues"
  },
  "homepage": "https://github.com/FrancoRATOVOSON/vifyre#readme",
  "dependencies": {
    "@fastify/middie": "^9.0.3",
    "@fastify/static": "^8.1.1",
    "envalid": "^8.0.0",
    "fastify": "^5.2.1",
    "fastify-plugin": "^5.0.1",
    "pino": "^9.6.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router": "^7.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@swc-node/register": "^1.10.9",
    "@swc/core": "^1.10.18",
    "@tailwindcss/vite": "^4.0.6",
    "@types/node": "^22.13.4",
    "@types/react": "^19.0.9",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react-swc": "^3.8.0",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-perfectionist": "^4.9.0",
    "eslint-plugin-prettier": "^5.2.3",
    "import-meta-resolve": "^4.1.0",
    "nodemon": "^3.1.9",
    "pino-pretty": "^13.0.0",
